<p id="notice"><%= notice %></p>

<h1>Listing Genders</h1>

<table>
  <thead>
    <tr>
      <th>Birth year</th>
      <th>First name</th>
      <th>Last name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genders.each do |gender| %>
      <tr>
        <td><%= gender.birth_year %></td>
        <td><%= gender.first_name %></td>
        <td><%= gender.last_name %></td>
        <td><%= gender.user %></td>
        <td><%= link_to 'Show', gender %></td>
        <td><%= link_to 'Edit', edit_gender_path(gender) %></td>
        <td><%= link_to 'Destroy', gender, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

